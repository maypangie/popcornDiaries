    <div class="movies-container">
        <% favorites.forEach(function(movie) { %>
            <div class="movie-card">
                <img src="<%= movie.posterPath ? `https://image.tmdb.org/t/p/w500${movie.posterPath}` : 'https://via.placeholder.com/300x450?text=No+Image' %>" 
                     alt="<%= movie.title %>" 
                     class="movie-poster">
                <h4><%= movie.title %></h4>
                <p>Rating: <%= movie.rating %></p>
                <div class="star-rating">
                    <% for (let i = 1; i <= 5; i++) { %>
                        <span class="star" onclick="rateMovie('<%= movie._id %>', <%= i %>)">
                            <i class="fa fa-star <%= i <= movie.rating ? 'checked' : '' %>"></i>
                        </span>
                    <% } %>
                </div>
                <button onclick="deleteFavorite('<%= movie._id %>')" class="btn btn-danger">Delete</button>
            </div>
        <% }) %>
    </div>
    














